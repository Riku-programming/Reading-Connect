<div class="container item_form">
  <%= form_with(model: @coordinate, class: "shadow p-3 mb-3 bg-light rounded", remote: true) do |f| %>
    <%= render 'shared/errors', obj: @coordinate %>
    <div class="form-group row">
      <div class="col-md-6 col-right">
        <%= f.label :name, 'コーディネート名', class: "col-form-label text-light" %>
        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "コーディネート名を入力してください" %>
        <%#= f.label :item_id, 'アイテム(1/5)', class: "col-form-label text-light" %>
        <%#= f.collection_select(:item_ids, @items, :id, :item_name, {prompt: '選択して下さい', selected: @items}, {class: 'form-control'}) %>
        <div class="text-right">
          <%= link_to_add_association 'アイテムを追加', f, :classifications,
                                      class: 'btn btn-default',
                                      data: {association_insertion_method: 'append'}
          %>
        </div>

        <tbody id='detail-association-insertion-point'>

        <%= f.fields_for :classifications do |classification| %>
          <%= render 'classification_fields', f: classification %>
        <% end %>
        </tbody>

        <div class="item-form-btns text-right mb-4">
          <% if params['action'] == 'new' %>
            <%= f.submit "投稿する", class: "btn btn-outline-light btn-lg" %>
          <% else %>
            <%= f.submit "更新する", class: "btn btn-outline-light btn-lg" %>
          <% end %>
          <%= link_to "戻る", coordinates_path, class: "btn post-form-btn mr-2", style: "border: none;" %>
        </div>
      </div>


  <% end %>
  </div>
</div>