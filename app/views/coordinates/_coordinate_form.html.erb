<div class="container item_form">
  <%= form_with(model: @coordinate, class: "shadow p-3 mb-3 bg-light rounded", remote: true) do |f| %>
    <%= render 'shared/errors', obj: @coordinate %>
    <div class="form-group row">
      <%#= f.label :image do %>
<!--        <img id="item_img_prev" src="#" class='hidden  z-depth-0 mb-4' style="width: 200px; height: 200px; object-fit: cover; cursor: pointer;" alt="coordinate image"/>-->
        <%#= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: 'custom-file-input' %>
<!--        <div class="col-md-6 add_image text-center" id="img_field">-->
          <%# if @coordinate.image.url.present? %>
            <%#= image_tag(@coordinate.image.url) %>
          <%# else %>
<!--            <i class="fas fa-camera"><p class="help-block">※ 5MBまでの画像をアップロードできます</p></i>-->
          <%# end %>
<!--        </div>-->
      <%# end %>
      <div class="col-md-6 col-right">
        <%= f.label :name, 'コーディネート名', class: "col-form-label text-light" %>
        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "コーディネート名を入力してください" %>
        <%#= f.label :category, 'カテゴリー', class: 'col-form-label text-light' %>
        <%#= f.collection_select(:category_id, @category, :id, :name, {prompt: '選択して下さい', selected: @item.category}, {class: 'form-control'}) %>


        <div class="item-form-btns text-right mb-4">
          <% if params['action'] == 'new' %>
            <%= f.submit "投稿する", class: "btn btn-outline-light btn-lg" %>
          <% else %>
            <%= f.submit "更新する", class: "btn btn-outline-light btn-lg" %>
          <% end %>
          <%= link_to "戻る", coordinates_path, class: "btn post-form-btn mr-2", style: "border: none;" %>
        </div>
      </div>



  <% end %>
  </div>
</div>