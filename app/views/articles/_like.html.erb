<% if user_signed_in? %>
  <% if article.favorited_by?(current_user.id) %>
    <p><span>お気に入り解除: </span><%=link_to article.favorites.count, article_favorites_path(article.id), method: :delete, remote: true, id: "likes_buttons_#{article.id}" %></p>
  <% else %>
    <p><span>お気に入り登録: </span><%=link_to article.favorites.count, article_favorites_path(article.id), method: :post, remote: true, id: "likes_buttons_#{article.id}" %></p>
  <% end %>
<% else %>
  <p><span>お気に入り数: </span><%= article.favorites.count %></p>
<% end %>
