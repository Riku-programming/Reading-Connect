<div class="row">
  <% @friendships.each do |friendship| %>
    <div class="col-lg-4 col-md-6 col-sm-6">
      <div class="user-card card card-index align-items-center">
        <% if friendship.avatar? %>
          <%= link_to image_tag(friendship.avatar.to_s, size: "150x150", class: "rounded-circle", alt: "avatar image"), friendship %>
        <% else %>
          <%= link_to image_tag("no-avatar.png", size: "150x150", class: "rounded-circle", alt: "avatar image"), friendship %>
        <% end %>
        <%= link_to friendship.name, friendship, class: 'user-name' %>
        <%= link_to 'Stop Follow', user_friendships_path(user_id), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-unfollow'%>
      </div>
    </div>
  <% end %>
</div>