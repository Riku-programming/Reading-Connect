<div class="container">
  <% @items.each do |item| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card-text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <% if item.user %>
              by <%= link_to item.user.name, user_path(item.user) %>
            <% end %>
          </div>

          <div class="card-body">
            <h5 class="card-title"><%= link_to item.item_name, item_path(item), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(item.price, length: 10) %></p>
            <%= link_to "View", edit_item_path(item), class: "btn btn-outline-info" %>
            <%= link_to "Delete", item_path(item), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            <% if item.wanted_by?(current_user) %>
              <p><span>欲しい解除: </span><%=link_to item.wants.count, item_wants_path(item.id), method: :delete %></p>
            <% else %>
              <p><span>欲しい登録: </span><%=link_to item.wants.count, item_wants_path(item.id), method: :post %></p>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Created<%= time_ago_in_words(item.created_at) %> ago,
              edited <%= time_ago_in_words(item.updated_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>