<div class="container">
  <% @items.each do |item| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card-text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <% if item.user %>
              by <%= link_to item.user.name, item_path(item.user_id) %>
            <% end %>
          </div>

          <div class="card-body">
            <h5 class="card-title"><%= link_to item.item_name, item_path(item), class: "text-success" %></h5>
            <p class="card-text"><%= item.price %></p>
            <%= link_to "Edit", edit_item_path(item), class: "btn btn-outline-info" %>
            <%= link_to "Delete", item_path(item), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            <%= link_to "Post", '#', class: "btn btn-outline-primary" %>

          </div>
          <div class="card-footer text-muted">
            <small>Created<%= time_ago_in_words(item.created_at) %> ago,
              edited <%= time_ago_in_words(item.updated_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>