                <%= link_to item.user.name, item.user %>
              </div>
              <div class="item-info">
                <!--                <small><%#= set_address(item.prefecture.name, item.city.name) %></small><br>-->
                <small><%= item.created_at.to_s(:datetime_jp) %></small>
              </div>
            </div>
            <%= link_to image_tag(item.image.to_s, class: 'weather_image_index', alt: 'Weather image'), item %>

            <div class="card-footer">
              <div>
                <span><%= "コメント#{item.comments.count}件" %></span>
                <span><%= "いいね！#{item.favorites.count}件" %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%= paginate items %>
