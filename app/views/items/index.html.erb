<main role="main">
  <!-- Main jumbotron for a primary marketing message or call to action -->
  <% if items.any? %>
    <div class="row item-cards">
      <% items.each do |item| %>
        <div class="col-lg-4 col-md-12 card-index">
          <div class="card">
            <div class="card-header" >
              <div class="item-user">
                <%# if item.user.avatar? %>
                <%#= link_to image_tag(item.user.avatar.to_s, class: 'user_avatar', alt: 'avatar image'), item.user, class: 'mr-2' %>
                <%# else %>
                <%#= link_to image_tag('no-avatar.png', class: 'user_avatar', alt: 'avatar image'), item.user, class: 'mr-2' %>
