<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<%# if !@users.empty? %>
<% if @users.present? %>
  <div class="card  results-block">
    <table class="col-md-12">
      <tbody>
      <% @users.each do |user| %>
<!--      fixme レスポンシブデザインに対応させる-->
        <tr>
          <td><strong>Name</strong>　　　　　<%= user.name %></td>
          <td><strong>Email</strong>　　　　　　　　　　<%= user.email %></td>
          <td><strong>Actions:</strong>　　　　　<%= link_to "View Profile", user_path(user), class: "btn btn-sm btn-success btn-user-view" %>
            <% if current_user.not_follows_with?(user) %>
              <%= link_to 'Follow user?', user_friendships_path(user), class: "btn btn-sm btn-primary btn-user-follow", method: :post %>
            <% else %>
              <span class="badge badge-secondar">
              フォローしています
            </span>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>