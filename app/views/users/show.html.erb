<h1 class="text-center mt-4"><%= @user.name %>'s profile</h1>

<%#= gravatar_for @user, size: 200 %>


<div id="friend-results">
<%# if !@friends.empty? %>
  <% if @friends.present? %>
    <%= render 'friends/list' %>
  <% end %>
</div>

<div class="text-center mt-4">
  <%= link_to "Edit your profile", edit_user_registration_path(@user), class: "btn btn-outline-info" %>
</div>

<div class="flickr_pagination">
  <%= will_paginate @items, :container => false %>
</div>
<%= render 'items/item' %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @items, :container => false %>
</div>