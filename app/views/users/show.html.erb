<h1 class="text-center mt-4"><%= @user.name %>'s page</h1>

<%#= gravatar_for @user, size: 200 %>


<!--<div id="friend-results">-->
<%# if !@friends.empty? %>
  <%# if @friends.present? %>
    <%#= render 'friends/list' %>
  <%# end %>
<!--</div>-->

<div class="text-center mt-4">
  <%= link_to "Edit your profile", edit_user_registration_path(@user), class: "btn btn-outline-info" %>
</div>

<div class="flickr_pagination">
  <%= will_paginate @items, :container => false %>
</div>

<div class="container">
  <% @items.each do |item| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card-text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <% if item.user %>
              by <%= link_to item.user.name, item_path(item.user_id) %>
            <% end %>
            <% if item.image? %>
              <div id="image">
                <%= image_tag item.image.thumb.url %>
                <%#= image_tag item.image.url %>
              </div>
            <% else %>
              <!--              todo imageがない場合のdefaultのimageを作る-->
              <%= image_tag 'star-on.png'%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>




<div class="flickr_pagination mb-4">
  <%= will_paginate @items, :container => false %>
</div>