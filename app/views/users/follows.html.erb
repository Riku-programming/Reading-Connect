<div class="search-area search">
  <h1 class="text-center mt-4 friend-font">Friends</h1>
  <%= form_with url: search_friend_path, remote: true, method: :get do |f| %>
    <div class="form-group row friend-search">
      <div class="col-xs-9 no-right-padding">
        <%= f.text_field :user, placeholder: "名前、メールアドレス", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-xs-3 no-left-padding search-btn">
        <%= button_tag type: :submit, class: "btn btn-success btn-search" do %>
          <%= icon('fas', 'search') %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="friend-results">
  <% if @users.present? %>
    <%= render 'users/partial/list' %>
  <% end %>
</div>

