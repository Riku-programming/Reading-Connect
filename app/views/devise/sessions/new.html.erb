<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "layouts/labels" %>

        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>
          <%# if current_user.guest? %>
          <%#= f.email_field :email, autocomplete: 'email', class: 'form-control', required: 'required', disabled: true %>
          <%# else %>
          <%= f.email_field :email, autocomplete: 'email', class: 'form-control', placeholder: "メールアドレスを入力してください", required: 'required' %>
          <%# end %>
        </div>

        <div class="form-group">
          <%= f.label :password %> <br/>
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "パスワードを入力してください" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "次回から自動でログインする" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit('ログイン', class: 'btn btn-lg first-btn btn-block') %>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |g| %>
        <%= g.hidden_field :email, value: 'guest@example.com' %>
        <%= g.hidden_field :password, value: 'guest_password' %>
        <div class="mb-3">
          <%= g.submit 'かんたんログイン', class: 'btn btn-lg guest-btn btn-block' %>
        </div>
      <% end %>


      <div class="link">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>

