<!--bootstrapに対応するようにフォームを修正する必要がある-->
<%= render "devise/shared/error_messages", resource: resource %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "layouts/labels" %>

        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %><br>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter your name", autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        <%# if @minimum_password_length %>
<!--          <p class="form-group row">-->
<!--            <em class="col-10">-->
<!--              password is <%#= @minimum_password_length %> characters minimum-->
<!--            </em>-->
<!--          </p>-->
        <%# end %>


        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "6 characters minimum" %>
          </div>
        </div>

        <div class="form-group row ">
          <%= f.label :password_confirmation, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10 password-form password-confirmation">
            <%= f.password_field :password_confirmation, class: "form-control shadow rounded", autocomplete: "new-password", placeholder: "Enter your password again" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit('Sign in', class: 'btn btn-lg btn-primary btn-block') %>
        </div>
      <% end %>
      <div class="link">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>

</div>

