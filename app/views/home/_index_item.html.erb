<% if @items.any? %>
  <%= paginate @items %>
  <div class="row item-cards">
    <% @items.each do |item| %>
      <div class="col-lg-4 col-md-12 card-index">
        <div class="card">
          <div class="card-header">
            <div class="item-user">
              <% if item.user.avatar? %>
                <%= link_to image_tag(item.user.avatar.to_s, class: 'user_avatar rounded-circle d-none d-md-inline', alt: 'avatar image'), item.user, class: 'mr-2' %>
              <% else %>
                <%= link_to image_tag('no-avatar.png', class: 'user_avatar rounded-circle d-none d-md-inline', alt: 'avatar image'), item.user, class: 'mr-2' %>
              <% end %>
              <%= link_to item.user.name, item.user %>
            </div>
            <div class="item-info">
              <small><%= item.item_name %></small>
              <br>
              <small><%= item.created_at.to_s(:datetime_jp) %></small>
            </div>
          </div>
          <% if item.image? %>
            <%= link_to image_tag(item.image.to_s, class: 'item_image_index', alt: 'Item image'), items_path %>
          <% else %>
            <%= link_to image_tag('no_image.png', class: 'item_image_index', alt: 'Item image'), items_path %>
          <% end %>

          <div class="card-footer">
            <div>
              <span><%= "いいね！#{item.likes.count}件" %></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @items %>
<% end %>